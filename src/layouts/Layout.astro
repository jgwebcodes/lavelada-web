---
// Supports weights 100-900
import "@fontsource-variable/jost";

import SmokeBackground from "@/components/SmokeBackground.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Evento de Boxeo entre streamers y creadores de contenido, organizado por Iban Llanos"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href="https://lavelada.es/" />
    <title>{title}</title>
  </head>
  <body>
    <SmokeBackground />
    <div class="max-w-6xl px-4 lg:px-10 mx-auto">
      <slot />
    </div>
  </body>
</html>

<style is:global>
  html {
    font-family: "Jost Variable", system-ui, sans-serif;
    background: #ddd;
  }
</style>
